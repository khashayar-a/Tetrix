#!/usr/bin/python

from subprocess import call
import os
import sys

def main(argv):   
    tetrix_path = os.path.dirname(os.path.realpath(__file__))	
    sys.path.append(tetrix_path)
    os.chdir(tetrix_path)
    
    if len(argv) == 0:
   	    call(["erl", "-pa" ,"ebin/", "-name", "node2@192.168.3.160" , "-setcookie" ,"nodes", "-noshell", "&"])  
    elif argv[0] == "compile":
        call(["./run.sh", "compile_erlang"]) 
    elif argv[0] == "clean":
        call(["./run.sh", "clean"])

if __name__ == "__main__":
    main(sys.argv[1:]) 
    
